<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3><a href="/blog/post/new">Create a New Post</a></h3>
  </div>

  {{#if blogs.length}}
  <div class="col-md-6 project-list">
    {{#each blogs as |blog| }}
    <div class="row mb-4 project">
      <div class="col-md-4">
        <h2>
          <a href="/blog/{{blog.id}}">{{blog.title}}</a>

        </h2>
        <p>Created by {{blog.user.name}} on {{format_date blog.createdAt}}</p>
      </div>
      <div class="col-md-7">
        <p>
          {{blog.content}}
        </p>
      </div>
      <div class="col-md-1">
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>