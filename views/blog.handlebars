<div class="text-center">
  <h2>{{title}} <a href="/blog/post/{{id}}">Edit Post</a></h2>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date createdAt}}</p>
  <hr />
  <div class="row">
    <div class="col-md-8">
      <textarea class="form-textarea w-100" type="text" id="comment">
      </textarea>
    </div>
    <div class="col-md-2">
      <button class="btn btn-sm post-comment" data-id="{{id}}" data-user-id="{{userId}}">Post Comment</button>
    </div>
  </div>
  <div class="comment-list mt-5">
    {{#each comments as |comment|}}
    <div class="row mx-auto card text-justify">
      <div class="col-md-8">
        <p>{{comment.comment}}</p>
        <small>Commented by {{comment.user.name}} on {{format_date comment.createdAt}}</small>
      </div>
      <div class="col-md-2 text-center my-auto">
        <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">X</button>
      </div>
    </div>
    {{/each}}
  </div>
</div>

<script src="/js/comment.js" />